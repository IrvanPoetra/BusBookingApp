<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/price"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:gravity="end|top"
            android:text="Rp.80.000,00"
            android:textAppearance="@style/nu_exb_16"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="60dp"
            android:gravity="end|top"
            android:text="/seat"
            android:textColor="@color/red"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/POBus"
            android:layout_width="170dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:text="@string/po_name"
            android:textAppearance="@style/nu_exb_16"
            android:textColor="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/BusNo"
            android:layout_width="62dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:gravity="top"
            android:lineSpacingExtra="10sp"
            android:text="@string/bus_no"
            android:textAppearance="@style/lato_12"
            android:textColor="#9A9A9A"
            android:translationY="-4.8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/city_departure"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="85dp"
            android:gravity="top"
            android:text="KOTA KABUPATEN ACEH TENGAH"
            android:textAppearance="@style/nu_exb_14"
            android:textColor="#585858"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_departure"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="150dp"
            android:gravity="top"
            android:text="@string/time_departure"
            android:textAppearance="@style/nu_exb_14"
            android:textColor="#585858"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:rotation="180"
            android:layout_marginTop="150dp"
            android:background="@drawable/right_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/time_arrival"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="150dp"
            android:gravity="top"
            android:text="@string/time_arrival"
            android:textAppearance="@style/nu_exb_14"
            android:textColor="#585858"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/city_arrival"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="85dp"
            android:gravity="end|top"
            android:text="KOTA KABUPATEN ACEH TENGAH"
            android:textAppearance="@style/nu_exb_14"
            android:textColor="#585858"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/terminal_arrival"
            android:layout_width="140dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="130dp"
            android:gravity="end|top"
            android:lineSpacingExtra="10sp"
            android:text="@string/terminal_arrival"
            android:textAppearance="@style/lato_12"
            android:textColor="#D8D8D8"
            android:translationY="-4.8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_arrival"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="180dp"
            android:gravity="end|top"
            android:lineSpacingExtra="10sp"
            android:text="@string/date_arrival"
            android:textAppearance="@style/lato_12"
            android:textColor="#808080"
            android:translationY="-4.8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_departure"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            android:gravity="top"
            android:lineSpacingExtra="10sp"
            android:text="@string/date_departure"
            android:textAppearance="@style/lato_12"
            android:textColor="#808080"
            android:translationY="-4.8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/travel_time"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="175dp"
            android:gravity="center|top"
            android:lineSpacingExtra="10sp"
            android:text="@string/time_estimated"
            android:textAppearance="@style/nu_exb_14"
            android:textColor="#808080"
            android:translationY="-4.8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/terminal_departure"
            android:layout_width="140dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            android:gravity="top"
            android:lineSpacingExtra="10sp"
            android:text="@string/terminal_departure"
            android:textAppearance="@style/lato_12"
            android:textColor="#D8D8D8"
            android:translationY="-4.8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>